
<%- include("partials/header"); -%>
    <h1>Compose</h1>
    <form class="" action="/write" method="post" enctype="multipart/form-data">
      <div class="form-group">
        <label>Title</label>     <! –– Title should be unique ––>
        <input class="form-control" type="text" name="postTitle" required>
        <label>Content</label>
        <textarea class="form-control" name="postBody" rows="5" cols="30" required></textarea>
        <label>ADD Photo</label>
        <input class="form-control" type="file" name="photo" required>
      </div>
      <button class="btn btn-primary" type="submit" name="button">Publish</button>
    </form>

<%- include("partials/footer"); -%>
